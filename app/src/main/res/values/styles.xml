<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TextAppearance.Regular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TextAppearance.Italic" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/italic</item>
    </style>


    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="TextAppearance.Bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/bold</item>
    </style>

</resources>