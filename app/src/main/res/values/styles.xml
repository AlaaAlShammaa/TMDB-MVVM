<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="regular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/d_din</item>
    </style>

    <style name="italic" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/d_din_italic</item>
    </style>

    <style name="bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/d_din_bold</item>
    </style>

</resources>